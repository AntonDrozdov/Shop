@model DataManager.Model.Discount

@{
    ViewBag.Title = "DeleteDiscount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>DeleteDiscount</h2>
<dl>
    <dd>
        @Html.DisplayFor(model => model.BeginDate)
    </dd>
    <dd>
        @Html.DisplayFor(model => model.EndDate)
    </dd>
    <dd>
        <ul>
            @foreach (var item in Model.Goods) { 
                <li>@item.Title</li>
            }
        </ul>
    </dd>
</dl>
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
    <br /><br />
    @Html.ActionLink(" < BACK TO DISCOUNTS LIST ", "DiscountsList", "Admin", new { @class = "inTableLink" })
}


