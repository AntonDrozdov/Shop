@model IEnumerable<DataManager.Model.CategoryType>

@{
    ViewBag.Title = "CategoryTypesList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ Html.RenderAction("AdminMenu", "AdminMenu"); }
<h2>CategoryTypesList</h2>
<p>
    @Html.ActionLink("Create CategoryType", "CreateCategoryType", null, new { @class = "menuitem" })
</p>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Consist of</th>
            <th>OPTIONS</th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@Html.ActionLink(item.Title, "EditCategoryType", new { item.Id }, new { @class = "inTableLink" })</td>
            <td>@item.Description</td>
            <td></td>
            <td>@Html.ActionLink("Delete", "DeleteCategoryType", new { id = item.Id }, new { @class = "inTableLink" })</td>
        </tr>
    }
</table>
