@model IEnumerable<DataManager.Model.Purchase>

@{
    ViewBag.Title = "PurchasesList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>PurchasesList</h2>
<p>
    @Html.ActionLink("Create Purchase", "CreatePurchase", null, new { @class = "menuitem" })
</p>
<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Date</td>
            <td>GoodTitle</td>
            <td>Amount</td>
            <td>PurchasePrice</td>
            <td><b>OPTIONS</b></td>
        </tr>
    </thead>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink(item.Good.Title, "EditPurchase", new { item.Id }, new { @class = "inTableLink" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchasePricePerItem)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeletePurchase", new { id = item.Id }, new { @class = "inTableLink" })
        </td>
    </tr>
}
</table>

