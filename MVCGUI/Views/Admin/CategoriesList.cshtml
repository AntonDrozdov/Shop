@model IEnumerable<DataManager.Model.Category>

@{
    ViewBag.Title = "CategoriesList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CategoriesList</h2>
<p>
    @Html.ActionLink("Create Category", "CreateCategory", null, new { @class = "menuitem" })
</p>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Included In</th>
            <th>CategoryTypes</th>
            <th>OPTIONS</th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@Html.ActionLink(item.Title, "EditCategory", new { item.Id }, new { @class = "inTableLink" })</td>
            <td>@item.Description</td>
            <td>
                <ul>
                    @foreach (var item3 in item.ParentCategories)
                    {
                        <li>@item3.Title</li>
                    }
                </ul>
            </td>
            <td>
                <ul>
                    @foreach (var item2 in item.CategoryTypes)
                    {
                        <li>@item2.Title</li>
                    }
                </ul>
            </td>
            <td>@Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id }, new { @class = "inTableLink" })</td>
        </tr>
    }
</table>

